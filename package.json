{
    "name": "simple-sandbox",
    "version": "0.3.23",
    "description": "A simple sandbox for Node.js using Linux namespaces and cgroup.",
    "packageManager": "pnpm@7.0.0",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "author": "t123yh",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/t123yh/simple-sandbox"
    },
    "keywords": [
        "sandbox",
        "chroot",
        "linux"
    ],
    "dependencies": {
        "bindings": "^1.5.0",
        "cmake-js": "^6.1.0",
        "node-addon-api": "^3.0.2",
        "randomstring": "^1.1.5"
    },
    "devDependencies": {
        "@types/bindings": "^1.5.1",
        "@types/node": "^14.14.6",
        "typescript": "^4.0.5"
    },
    "scripts": {
        "install": "cmake-js compile --CDCMAKE_EXPORT_COMPILE_COMMANDS --cxx=clang++ --CDCMAKE_CXX_FLAGS=-stdlib=libc++ --CDCMAKE_EXE_LINKER_FLAGS=\"-stdlib=libc++ -lc++abi -fuse-ld=lld\"",
        "build": "tsc -p ./src",
        "build:watch": "tsc -w -p ./src",
        "prepublishOnly": "pnpm build",
        "clean": "rm -rf ./build"
    },
    "files": [
        "CMakeLists.txt",
        "/native",
        "/lib"
    ]
}
